<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    tools:context=".fragments.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/text_signup"
                    android:textColor="@color/dark"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTitle"
                    android:layout_centerInParent="true"
                    android:text="@string/text_signup_describe"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:orientation="vertical"
            >

                <EditText
                    android:id="@+id/textName"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_field"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/hint_name"
                    android:minHeight="48dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark"
                />

                <EditText
                    android:id="@+id/textEmail"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_email"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/rounded_field"
                    android:textColorHint="@color/dark"
                    android:minHeight="48dp" />
                <EditText
                    android:id="@+id/textMobile"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_mobile"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:background="@drawable/rounded_field"
                    android:textColorHint="@color/dark"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_field"
                    android:textColorHint="@color/dark"
                    android:minHeight="48dp" />
                <EditText
                    android:id="@+id/textRepassword"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_repassword"
                    android:layout_gravity="center_horizontal"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_field"
                    android:textColorHint="@color/dark"
                    android:minHeight="48dp" />
                <EditText
                    android:id="@+id/text_address"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_address"
                    android:layout_gravity="center_horizontal"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_field"
                    android:textColorHint="@color/dark"
                    android:minHeight="48dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    >

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:text="@string/text_signup"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.07" />

<!--                    <TextView-->
<!--                        android:id="@+id/alternativeMethods"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/text_alternative_register"-->
